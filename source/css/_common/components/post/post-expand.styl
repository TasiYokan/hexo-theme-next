.posts-expand {
  padding-top: 0px;
}

@media (max-width: 767px) {
  .posts-expand {
    margin: 0 20px;
    
    +tablet() {
      margin: 0;
    }
    +mobile() {
      margin: 0;
    }
  }

  .post-body {
    pre {
      padding: 10px;
      .gutter pre {
        padding-right: 10px;
      }
    }

    .highlight {
      margin-left: 0px;
      margin-right: 0px;
      padding: 0;
      .gutter pre {
        padding-right: 10px;
      }
    }
  }
}

.posts-expand .post-body {
  +desktop() { text-align: justify; }


  h2, h3, h4, h5, h6 {
    padding: 5px 0px;
    margin: 0 -10px;

    .header-anchor{
      float: right;
      margin-left: 10px;
      color: $grey-light;
      border-bottom-style: none;
      visibility: hidden;

      &:hover{
        color: inherit;
      }
    }

    &:hover .header-anchor{
      visibility: visible;
    }
  }

  h1 {
    border-left: 5px solid #555;
    padding-left: 20px;
    margin-left: -40px;
    margin-right: -40px;
    background-color: #fbfbfb;
  }

  h3 {
    padding: 5px 10px;
  }

  ul li { list-style: circle; }

  img {
    box-sizing: border-box;
    margin: auto;
    padding: 3px;
    border: 1px solid $gray-lighter;
  }
}

.posts-expand .fancybox img { margin: 0 auto; }
